<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.getitdonev2">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_size"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ResetPassword"></activity>
        <activity android:name=".StatisticsActivity" />
        <activity android:name=".PomodoroTimer" />
        <activity android:name=".NotificationsSetup" />
        <activity android:name=".AddTask" />
        <activity android:name=".EditProfile" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".ReminderBroadcast" />
        <receiver android:name=".ReminderBroadcastPause" />
        <receiver android:name=".ReminderBroadcastFinish" />
    </application>

</manifest>